<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000">

    <!--<com.rastargame.rick.rickivbrowse.view.RickBrowseImageView-->
    <!--android:id="@+id/rick_iv_test"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:scaleType="matrix"-->
    <!--/>-->

    <android.support.v4.view.ViewPager
        android:id="@+id/rick_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>

    <LinearLayout
        android:id="@+id/rick_ll_title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#333"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/rick_iv_close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="3dp"
            android:src="@drawable/rick_ic_left"
            />
        <TextView
            android:id="@+id/rick_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="#FFF"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/rick_tv_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:textColor="#FFF"
        android:textSize="15sp" />
</RelativeLayout>
